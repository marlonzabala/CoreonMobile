<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:minHeight="35dp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/imageViewWarning"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:adjustViewBounds="true"
        android:src="@drawable/icon_rewards_warning" />

    <TextView
        android:id="@+id/textViewOops"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewWarning"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif"
        android:text="Ooops!"
        android:textColor="#cccccc"
        android:textSize="35sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewWarning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewOops"
        android:fontFamily="sans-serif"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:padding="20dp"
        android:textColor="#cccccc"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="Sorry, This service is not available yet. We will update you as soon as this service is available" />

</RelativeLayout>