<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff" >

    <LinearLayout
        android:id="@+id/linearLayoutSubTabsContent1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/imageViewTabBg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/layoutViewSubTabRewardsRel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:onClick="openRewards"
            android:layout_weight="1" >


            <TextView
                android:id="@+id/textViewSubTabRewards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:paddingTop="5dp"
                android:scaleType="fitCenter"
                android:text="REWARDS"
                android:textColor="#666666"
                android:textSize="12sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageViewSubTabRewards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:src="@drawable/icon_subtab_rewards" />
        </RelativeLayout>

        <View
            android:id="@+id/lineMiddle"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_weight="0.005"
            android:background="#e4e4e4" />

        <RelativeLayout
            android:id="@+id/layoutViewSubTabOffersRel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:onClick="openOffers"
            android:src="@drawable/icon_billing_payments" >

            <TextView
                android:id="@+id/textViewSubTabOffers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:paddingTop="5dp"
                android:scaleType="fitCenter"
                android:text="OFFERS"
                android:textColor="#666666"
                android:textSize="12sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageViewSubTabOffers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:src="@drawable/icon_subtab_offers" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/lineMiddle"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayoutSubTabsContent1"
        android:background="#e4e4e4" />

