<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f2f2f2"
    android:minHeight="40dp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/imageViewLogoMain"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:padding="20dp"
        android:scaleType="fitStart"
        android:src="@drawable/icon_drawer_logo" />

    <TextView
        android:id="@+id/textViewInfo1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageViewLogoMain"
        android:fontFamily="sans-serif"
        android:gravity="left|center_vertical"
        android:paddingLeft="20dp"
        android:scaleType="fitCenter"
        android:text="My Coreon Mobile App"
        android:textColor="#787878"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/textViewInfo2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textViewInfo1"
        android:fontFamily="sans-serif"
        android:gravity="left|center_vertical"
        android:paddingLeft="20dp"
        android:scaleType="fitCenter"
        android:text="Version 1.0"
        android:textColor="#787878"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/textViewInfo3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textViewInfo2"
        android:fontFamily="sans-serif"
        android:gravity="left|center_vertical"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:scaleType="fitCenter"
        android:text="IT.Corea Developers"
        android:textColor="#fc6802"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/textViewInfo4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textViewInfo3"
        android:fontFamily="sans-serif"
        android:gravity="left|center_vertical"
        android:paddingLeft="20dp"
        android:scaleType="fitCenter"
        android:text="Copyright Â© 2014. my.coreonmobile.com"
        android:textColor="#787878"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/textViewInfo5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textViewInfo4"
        android:fontFamily="sans-serif"
        android:gravity="left|center_vertical"
        android:paddingLeft="20dp"
        android:paddingBottom="20dp"
        android:scaleType="fitCenter"
        android:text="All Rights Reserved"
        android:textColor="#787878"
        android:textSize="12dp" />

</RelativeLayout>