<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listview_main_header" >

    <TextView
        android:id="@+id/textViewTitle"
        style="@android:style/TextAppearance.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:gravity="left|center_vertical"
        android:padding="15dp"
        android:scaleType="fitCenter"
        android:text="Branch Payments"
        android:textStyle="bold"
        android:textColor="#666666" />

    <TextView
        android:id="@+id/TextViewInfo1"
        style="@android:style/TextAppearance.Small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textViewTitle"
        android:fontFamily="sans-serif"
        android:gravity="left|center_vertical"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:scaleType="fitCenter"
        android:text="You can make your payment on the following IT.Corea Inc. owned branches listed below. Just proceed to the counter and inquire for Coreon Mobile Payment."
        android:textColor="#737373" />
    <!-- android:textSize="15sp" -->

</RelativeLayout>