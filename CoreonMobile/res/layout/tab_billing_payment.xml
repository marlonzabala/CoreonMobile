<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <LinearLayout
        android:id="@+id/linearLayoutSubTabsContent1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/imageViewTabBg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/layoutViewSubTabAccountSummaryRel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:onClick="openAccountSummary"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/textViewSubTabAccountSummary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:paddingTop="5dp"
                android:scaleType="fitCenter"
                android:text="ACCOUNT SUMMARY"
                android:textColor="#666666"
                android:textSize="12sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageViewSubTabAccountSummary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:src="@drawable/icon_subtab_accountsummary" />

        </RelativeLayout>

        <View
            android:id="@+id/lineLeft"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_weight="0.01"
            android:background="#e4e4e4" />

        <RelativeLayout
            android:id="@+id/layoutViewSubTabBillingRecordRel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_weight="1"
            android:onClick="openBillingRecord"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_billing_payments" >

            <TextView
                android:id="@+id/textViewSubTabBillingRecord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:paddingTop="5dp"
                android:scaleType="fitCenter"
                android:text="BILLING RECORD"
                android:textColor="#666666"
                android:textSize="12sp"
                android:textStyle="bold" />
            
            <ImageView
                android:id="@+id/imageViewSubTabBillingRecord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:src="@drawable/icon_subtab_billingrecord" />
            
        </RelativeLayout>

        <View
            android:id="@+id/lineLeft"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_weight="0.01"
            android:background="#e4e4e4" />

        <RelativeLayout
            android:id="@+id/layoutViewSubTabBillingStatementsRel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_above="@+id/pager"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:onClick="openBillingStatements"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_rewards_offers" >

            <TextView
                android:id="@+id/textViewSubTabBillingStatements"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:paddingTop="5dp"
                android:scaleType="fitCenter"
                android:text="BILLING STATEMENTS"
                android:textColor="#666666"
                android:textSize="12sp"
                android:textStyle="bold" />
            
            <ImageView
                android:id="@+id/imageViewSubTabBillingStatements"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:src="@drawable/icon_subtab_billingstatements" />
            
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/lineMiddle"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayoutSubTabsContent1"
        android:background="#e4e4e4" />
    
    <LinearLayout
        android:id="@+id/linearLayoutSubTabsContent2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/lineMiddle"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/layoutViewSubTabPaymentRecordRel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:onClick="openPaymentRecord"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/textViewSubTabPaymentRecord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:paddingTop="5dp"
                android:scaleType="fitCenter"
                android:text="PAYMENT RECORD"
                android:textColor="#666666"
                android:textSize="12sp"
                android:textStyle="bold" />
            
            <ImageView
                android:id="@+id/imageViewSubTabPaymentRecord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:src="@drawable/icon_subtab_paymentrecord" />
            
        </RelativeLayout>

        <View
            android:id="@+id/lineLeft"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_weight="0.01"
            android:background="#e4e4e4" />

        <RelativeLayout
            android:id="@+id/layoutViewSubTabReportPaymentRel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:onClick="openReportPayment"
            android:src="@drawable/icon_billing_payments" >

            <TextView
                android:id="@+id/textViewSubTabReportPayment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:paddingTop="5dp"
                android:scaleType="fitCenter"
                android:text="REPORT PAYMENT"
                android:textColor="#666666"
                android:textSize="12sp"
                android:textStyle="bold" />
            
            <ImageView
                android:id="@+id/imageViewSubTabReportPayment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:src="@drawable/icon_subtab_reportpayment" />
            
        </RelativeLayout>

        <View
            android:id="@+id/lineRight"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_weight="0.01"
            android:background="#e4e4e4" />

        <RelativeLayout
            android:id="@+id/layoutViewSubTabPaymentOptionsRel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_above="@+id/pager"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
             android:onClick="openPaymentOptions"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_rewards_offers" >

            <TextView
                android:id="@+id/textViewSubTabPaymentOptions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:paddingTop="5dp"
                android:scaleType="fitCenter"
                android:text="PAYMENT OPTIONS"
                android:textColor="#666666"
                android:textSize="12sp"
                android:textStyle="bold" />
            
            <ImageView
                android:id="@+id/imageViewSubTabPaymentOptions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:src="@drawable/icon_subtab_paymentoptions" />
        </RelativeLayout>
    </LinearLayout>
    
    <View
        android:id="@+id/lineMiddle2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayoutSubTabsContent2"
        android:background="#e4e4e4" />
    
<!--     linearLayoutSubTabsContent2 -->
    
    <RelativeLayout
        android:id="@+id/dynamicLayoutSubmenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lineMiddle2"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/shadowTops"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/menu_bottom_shadow" />
        
    </RelativeLayout>
</RelativeLayout>